datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @default(uuid())
  name     String
  password String
  email    String @unique
  phone    String @unique

  Restaurateur Restaurateur?

  @@map("users")
}

model Restaurateur {
  id       String @id @default(uuid())
  document String @unique
  userId   String @unique @map("user_id")

  user User @relation(fields: [userId], references: [id])

  @@map("restaurateurs")
}
